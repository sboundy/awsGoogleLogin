# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET     	/login               					controllers.OAuthAuthenticator.login()

GET			/logout									controllers.OAuthAuthenticator.logout()

GET     	/oath2Callback		       				controllers.OAuthAuthenticator.oath2Callback(state, code)

GET			/retrieve_temporary_creds				controllers.Application.retrieveCreds(arn)

GET			/update_file							controllers.Application.updateAWSFile

GET			/get_portal_login						controllers.Application.getPortalLogin

